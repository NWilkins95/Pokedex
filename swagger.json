{
  "swagger": "2.0",
  "info": {
    "title": "Pokedex",
    "description": "An API to manage a Pokedex for the first generation of Pokemon. \n\n**Authentication Notice:**\n\nAll `POST`, `PUT`, and `DELETE` routes require authorization (indicated by the lock icon), in addition to the `GET` route to retrive a specific battle team. If you are not authenticated, [sign in via GitHub](https://pokedex-g9kr.onrender.com/login), after which you will be redirected back to the API documentation. Failure to do so will result in the API returning a `401 Unauthorized` as a response.\n\nTo end your session, [logout here](https://pokedex-g9kr.onrender.com/auth/logout).\n\nAll routes are wrapped in centralized error handling. POST and PUT routes include validation logic and may return `422 Unprocessable Entity` if input is invalid.\n\n_Not affiliated with Nintendo._",
    "version": "1.0.0"
  },
  "host": "pokedex-g9kr.onrender.com",
  "basePath": "/",
  "tags": [
    { "name": "Pokemon", "description": "Endpoints related to Pokémon data" },
    { "name": "Moves", "description": "Endpoints related to Pokémon moves" },
    { "name": "Battle Teams", "description": "Endpoints for managing battle teams" },
    { "name": "Users", "description": "Endpoints for user accounts and authentication" }
  ],
  "schemes": ["https"],
  "paths": {
    "/pokemons/": {
      "get": {
        "tags": ["Pokemon"],
        "description": "Get all Pokémon",
        "responses": { "200": { "description": "OK" }, "500": { "description": "Internal Server Error" } }
      }
    },
    "/pokemons/{id}": {
      "get": {
        "tags": ["Pokemon"],
        "description": "Get a Pokémon by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" }, "500": { "description": "Internal Server Error" } }
      }
    },
    "/moves/pokemon/{pokemonId}/moves": {
      "get": {
        "tags": ["Moves"],
        "description": "Get moves for a specific Pokémon",
        "parameters": [
          { "name": "pokemonId", "in": "path", "required": true, "type": "string" },
          { "name": "level", "in": "query", "type": "string" },
          { "name": "groupBy", "in": "query", "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/moves/battle-team/{teamId}/pokemon/{pokemonIndex}/moves": {
      "post": {
        "tags": ["Moves"],
        "description": "Add moves to a Pokémon in a battle team",
        "parameters": [
          { "name": "teamId", "in": "path", "required": true, "type": "string" },
          { "name": "pokemonIndex", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": { "moveIds": { "example": "any" } }
            }
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/battle_teams/{id}": {
      "get": {
        "tags": ["Battle Teams"],
        "description": "Get a battle team by ID",
        "security": [
          {
            "GitHubOAuth": []
          }
        ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "500": { "description": "Internal Server Error" } }
      },
      "put": {
        "tags": ["Battle Teams"],
        "description": "Update a battle team",
        "security": [
          {
            "GitHubOAuth": []
          }
        ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "500": { "description": "Internal Server Error" } }
      },
      "delete": {
        "tags": ["Battle Teams"],
        "description": "Delete a battle team",
        "security": [
          {
            "GitHubOAuth": []
          }
        ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "500": { "description": "Internal Server Error" } }
      }
    },
    "/battle_teams/": {
      "post": {
        "tags": ["Battle Teams"],
        "description": "Create a new battle team",
        "security": [
          {
            "GitHubOAuth": []
          }
        ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "500": { "description": "Internal Server Error" } }
      }
    },
    "/users/{username}": {
      "get": {
        "tags": ["Users"],
        "description": "Get a user by username",
        "parameters": [
          { "name": "username", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" }, "500": { "description": "Internal Server Error" } }
      },
      "put": {
        "tags": ["Users"],
        "description": "Update a user",
        "security": [
          {
            "GitHubOAuth": []
          }
        ],
        "parameters": [
          { "name": "username", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "500": { "description": "Internal Server Error" } }
      },
      "delete": {
        "tags": ["Users"],
        "description": "Delete a user",
        "security": [
          {
            "GitHubOAuth": []
          }
        ],
        "parameters": [
          { "name": "username", "in": "path", "required": true, "type": "string" }
        ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "500": { "description": "Internal Server Error" } }
      }
    },
    "/users/": {
      "post": {
        "tags": ["Users"],
        "description": "Create a new user",
        "security": [
          {
            "GitHubOAuth": []
          }
        ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "500": { "description": "Internal Server Error" } }
      }
    }
  }
}
